color = #7258a1
light = 100

body
    padding 10px 20px

.wrapper
    width 100%
    max-width 1200px
    margin-right auto
    margin-left auto
    font-size 18px

.intro
    text-align center
    margin 20px auto

    .logo
        display block
        width 100px
        height 100px
        margin 20px auto
        fill #7258a1

.works-list
    // margin-left -20px
    // margin-right -20px

    .item + .item
        margin-top 40px

    .work
        display flex
        flex-direction row
        align-items center

    .item:nth-child(even) .work
        flex-direction row-reverse

    .media,
    .infos
        width 50%
        // padding-left 20px
        // padding-right 20px

    .filet
        display block
        margin-right 20px
        margin-left 20px
        height 100px
        width 0
        border-left 1px solid color
        animation filet 2s infinite alternate-reverse cubic-bezier(.4,0,.5,1.2)

    .media
        // margin-right auto
        max-height 400px
        overflow-y auto

    .infos
        // display flex
        // flex-direction row
        // align-items center
        // margin-left auto
        // margin-right 40px

        .site-title
            font-family 'kelson'
            color color
            font-size: 22px;
            font-weight light


@keyframes filet
    0%
        height 100px
    100%
        height 10px